#include<iostream>

int main() {
    setlocale(LC_ALL, "ru");
    int n, tmp;
    std::cout << "Введите размер массива: "; std::cin >> n;
    int arr[1000] = {};
    std::cout << "Введите элементы массива: ";
    for (int i = 1; i <= n; ++i) {
        std::cin >> tmp;
        arr[i] = tmp;
    }
    std::cout << "Ответ: ";
    for (int i = 1; i <= n / 2; ++i) { // Цикл доходит до середины массива
        std::cout << arr[i] << " "; // i Увеличивается, начиная с начала массива до его середины
        std::cout << arr[n - (i - 1)] << " "; // n - (i - 1) Уменьшается, начиная с конца массива до его середины
    }
    if (n % 2 != 0) // Если количество элементов нечётно, выводим пропущенный, находящийся ровно в середине(Он будет в конце нового массива)
        std::cout << arr[n / 2 + 1];

    return 0;
}

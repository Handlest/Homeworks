#include<iostream>

int main() {
    setlocale(LC_ALL, "ru");
    int n, tmp;
    std::cout << "Введите размер массива: "; std::cin >> n;
    int arr[1000] = {};
    std::cout << "Введите элементы массива: ";
    for (int i = 1; i <= n; ++i) {
        std::cin >> tmp;
        arr[i] = tmp;
    }
    std::cout << "Ответ: ";
    for (int i = 1; i <= n / 2; ++i) {
        std::cout << arr[i] << " ";
        std::cout << arr[n - (i - 1)] << " ";
    }
    if (n % 2 != 0)
        std::cout << arr[n / 2 + 1];

    return 0;
}

#include <iostream>
using namespace std;
void rhombus(int n){
    int m, i, j;
    m = n / 2;
    for (i = 0; i < m; i++)
    {
        for (j = 0; j < n; j++)
        {
            if (j == m + i or j == m - i)
                cout << '*';
            else 
                cout << ' ';
        }
        cout << endl;
    }
    for (i = m; i < n; i++)
    {
        for (j = 0; j < n; j++)
        {
            if (j == m + n - i - 1 or j == i - m)
                cout << '*';
            else 
                cout << ' ';
        }
        cout << endl;
    }
}

int main(){
    int n, r;
    cout << "Enter the half of the height: ";
    cin >> r;
    n = r * 2 - 1;
    rhombus(n);
    return 0;
}

#include <iostream>
using std::cout;
using std::cin;
using std::endl;
int main() {
    int height;
    cout << "Enter the height of triangle\n";
    cin >> height;
    for (int i = 0; i < height; i++)
    {
        for (int j = 1; j < height - i; j++)
            cout << ' ';
        for (int j = height - i; j <= height + i; j++)
            cout << '*';
        for (int j = height + i + 1; j < height * 2; j++)
            cout << ' ';
        cout << endl;
    }
}

#include <iostream>
#include <clocale>
#include <cmath>
int main() {
    setlocale(LC_ALL, "");
    float x = 0, eps;
    float rez = 1, counter = 0;
    std::cout << "Введите х от -1 до 1" << std::endl;
    std::cin >> x;
    std::cout << "Введите значение eps" << std::endl;
    std::cin >> eps;
    while (std::abs(pow(x, counter)) > eps) {
        ++counter;
        rez += pow(x, counter);
    }
    std::cout << "Результат работы программы: " << rez << std::endl;
    std::cout << "Вычисленное значение по формуле 1/(1-x) равно " << 1. / (1. - x) << "\n" << "Разница в значениях составляет " << abs(rez - (1. / (1. - x))) << std::endl;
}
